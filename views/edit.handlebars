<h1 class="mb-1 restaurant-show-title">{{restaurant.item.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-solid fa-signature"></i>
          名稱：
        </span>
        <input type="name" id="name" class="col-8" placeholder="{{restaurant.item.name}}">
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        <input type="category" id="category" class="col-8" placeholder="{{restaurant.item.category}}">
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        <input type="location" id="location" class="col-8" placeholder="{{restaurant.item.location}}">
        <a href="{{restaurant.item.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        <input type="phone" id="phone" class="col-8" placeholder="{{restaurant.item.phone}}">
      </p>

      <p class="mb-3">
        <span class="text-secondary">
          <i class="fas fa-solid fa-feather"></i>
          描述：
        </span>  
        <textarea class="form-control .form-control-lg col-10" id="description" rows="6">{{restaurant.item.description}}</textarea>
      </p>

      <label for="image" class="form-label text-secondary mb-1">請上傳照片</label>
      <input class="form-control col-10 mb-3" type="file" id="image">
      <img class="rounded d-block mb-4 w-100 bg-grey" src="{{restaurant.item.image}}" alt="{{restaurant.item.name}}"
      style="max-width: 600px;">
      
      
    </div>
  </div>
</div>